#!/bin/bash

function cmd {
  echo -n "$1 ... "
  shift

  output=$($@ 2>&1)
  if [[ $? = 1 ]]; then
    echo "❌"
    echo "$output"
    exit 1
  fi

  echo "✅"
}

cmd "Running tests" npm test
cmd "Checking syntax" ./node_modules/standard/bin/cmd.js
cmd "Building bundle" npm run build
cmd "Copying to server" scp public/bundle.js \
  dr:/var/www/eu.drdinstem.me/public
